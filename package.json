{
  "name": "leaas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:pm2": "pnpm exec pm2 start ecosystem.config.cjs",
    "dev:pm2:stop": "pnpm exec pm2 stop vite-dev",
    "dev:pm2:restart": "pnpm exec pm2 restart vite-dev",
    "dev:pm2:status": "pnpm exec pm2 status vite-dev",
    "dev:pm2:logs": "pnpm exec pm2 logs vite-dev",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:docs": "prettier --write --no-ignore docs/*.md README.md .agent/workflows/*.md",
    "lint:docs": "prettier --check --no-ignore docs/*.md README.md .agent/workflows/*.md",
    "typecheck": "tsc -b --noEmit",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "diff": "git add -N . && git diff",
    "deploy": "vite build && gh-pages -d dist",
    "h": "node -e \"const p=JSON.parse(require('fs').readFileSync('package.json','utf8'));console.log('\\nДоступные команды:\\n');Object.entries(p.scripts).forEach(([k,v])=>console.log('  pnpm '+k.padEnd(20)+v));console.log()\""
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "jsdom": "^28.0.0",
    "pm2": "^6.0.14",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@swc/core"
    ]
  }
}
